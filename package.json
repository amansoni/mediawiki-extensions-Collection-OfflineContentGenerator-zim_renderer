{
  "name": "mw-ocg-zimwriter",
  "version": "0.0.0-git",
  "description": "Converts mediawiki collection bundles (as generated by mw-ocg-bundler) to ZIM files",
  "main": "lib/index.js",
  "scripts": {
    "lint": "npm run jshint && npm run jscs",
    "lint-no-0.8": "node -e 'process.exit(/v0[.][0-8][.]/.test(process.version) ? 0 : 1)' || npm run lint",
    "jshint": "jshint .",
    "jscs": "jscs .",
    "jscs-fix": "jscs --fix .",
    "mocha": "mocha",
    "test": "npm run lint-no-0.8 && (npm run mocha || echo Mocha tests are not working yet)",
    "travis": "npm-travis --remote gerrit wikimedia/mediawiki-extensions-Collection-OfflineContentGenerator-zim_renderer"
  },
  "repository": {
    "type": "git",
    "url": "wikimedia/mediawiki-extensions-Collection-OfflineContentGenerator-zim_renderer"
  },
  "keywords": [
    "wikitext",
    "zim",
    "openzim"
  ],
  "license": "GPL-2.0",
  "engines": {
    "node": ">=0.8"
  },
  "dependencies": {
    "commander": "~2.8.1",
    "core-js": "~0.9.18",
    "domino": "~1.0.19",
    "prfun": "~2.1.1",
    "readable-stream": "~1.0.33",
    "sqlite3": "~3.1.0",
    "tmp": "~0.0.27"
  },
  "devDependencies": {
    "jscs": "~2.5.0",
    "jshint": "~2.8.0",
    "mocha": "~2.3.3",
    "npm-travis": "~1.0.0"
  },
  "bin": {
    "mw-ocg-zimwriter": "./bin/mw-ocg-zimwriter"
  }
}
